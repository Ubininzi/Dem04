<UserControl x:Class="dem04.UserControls.RequestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dem04.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="300*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" x:Name="RequestStateLabel"/>
        <Label Grid.Row="1" Grid.Column="0" Margin="2" x:Name="ClientLabel"/>
        <Label Grid.Row="1" Grid.Column="1" Margin="2" x:Name="WorkerLabel"/>
        <Label Grid.Row="2" Grid.Column="0" Margin="2" x:Name="DateOfAcceptLabel"/>
        <Label Grid.Row="2" Grid.Column="1" Margin="2" x:Name="DateOfWorkStartLabel"/>
        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" x:Name="EquipmentLabel"/>
        <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" x:Name="DescriptionLabel"/>
    </Grid>
</UserControl>
