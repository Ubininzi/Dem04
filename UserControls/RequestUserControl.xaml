<UserControl x:Class="dem04.UserControls.RequestUserControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:dem04.UserControls"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="400" Margin="5" Cursor="Pen">

    <UserControl.Resources>
        <ControlTemplate TargetType="TextBox" x:Key="TextBoxTemplate">
            <Border BorderThickness="0 0 0 0.5" BorderBrush="Black" Margin="0.2">
                <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0.5" IsEnabled="False" BorderBrush="Transparent" Text="{TemplateBinding Text}"/>
            </Border>
        </ControlTemplate>
        <ControlTemplate TargetType="Button" x:Key="ButtonTemplate">
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="{TemplateBinding Margin}" Width="20" Height="20" Content="{TemplateBinding Content}"/>
        </ControlTemplate>
    </UserControl.Resources>


    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10 0 10 0" Background="White">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="5*"/>
				<RowDefinition Height="5*"/>
				<RowDefinition Height="5*"/>
				<RowDefinition Height="10*"/>
				<RowDefinition Height="30*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>
            <Button x:Name="EditRequestButton" Content="E" Grid.Row="0" Grid.Column="1" Template="{StaticResource ButtonTemplate}" Click="EditRequestButton_Click" Margin="1 1 1 1"/>
            <Button x:Name="ApproveChanges" Content="Y" Grid.Row="0" Grid.Column="1" Template="{StaticResource ButtonTemplate}" Click="ApproveChanges_Click" Visibility="Hidden" Margin="1 1 1 1"/>
            <Button x:Name="DeleteRequestButton" Content="D" Grid.Row="0" Grid.Column="1" Template="{StaticResource ButtonTemplate}" Click="DeleteRequestButton_Click" Margin="1 1 12 1"/>
            <Button x:Name="DiscardChanges" Content="N" Grid.Row="0" Grid.Column="1" Template="{StaticResource ButtonTemplate}" Click="DiscardChanges_Click" Visibility="Hidden" Margin="1 1 12 1"/> 

			<TextBox x:Name="RequestStateTextBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Template="{StaticResource TextBoxTemplate}" />
			<TextBox x:Name="ClientTextBox" Grid.Row="1" Grid.Column="0" Template="{StaticResource TextBoxTemplate}" />
			<TextBox x:Name="WorkerTextBox" Grid.Row="1" Grid.Column="1" Template="{StaticResource TextBoxTemplate}" />
			<TextBox x:Name="DateOfAcceptTextBox" Grid.Row="2" Grid.Column="0" Template="{StaticResource TextBoxTemplate}" />
			<TextBox x:Name="DateOfWorkStartTextBox" Grid.Row="2" Grid.Column="1" Template="{StaticResource TextBoxTemplate}" />
			<TextBox x:Name="EquipmentTextBox" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Template="{StaticResource TextBoxTemplate}" />
            <TextBox x:Name="DescriptionTextBox" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0.5" IsEnabled="False" BorderBrush="Transparent" />
		</Grid>
	</Border>
</UserControl>
